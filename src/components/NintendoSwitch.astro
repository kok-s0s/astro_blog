---
import ns_json from '../data/ns_data.json'
---

{
  ns_json.map(function (item) {
    console.log(item)

    return (
      <div class="ns-container">
        <img class="ns-img" src={item.imageUrl} alt={item.titleName} />
        <div class="image-shadow" />
        <div class="overlay-top-text">
          <span>{item.titleName}</span>
          <em>
            <b>{item.totalPlayedHours} h</b>
          </em>
        </div>
        <div class="overlay-bottom-text">{item.firstPlayedAt} 拥有</div>
      </div>
    )
  })
}

<style>
  .ns-container {
    position: relative;
    width: 180px;
  }

  .ns-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-shadow {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 40%, transparent 100%);
    content: '';
  }

  .overlay-top-text {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    color: #fffffe;
    padding: 0.5rem;
    font-size: 0.8rem;
  }

  .overlay-bottom-text {
    width: 100%;
    position: absolute;
    bottom: -5%;
    background-color: rgba(0, 0, 0, 0.7);
    color: #808080;
    font-size: 0.6rem;
    text-align: center;
    padding: 0.2rem 0;
  }
</style>
